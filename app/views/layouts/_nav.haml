%header
  - logo_image = image_tag("hangoutt.png", :alt=>"site logo", :id=>"logo_image")
  = link_to logo_image, root_path
  #search_space
    =form_tag(users_path, :method => "post") do
      %label Search
      = text_field_tag "term", params[:term]
      = submit_tag "go"
  #white_space
    -#- if signed_in?
      -#= link_to image_tag("icon_facebook.png",:alt=>"facebook", :class=>"network_logos", :id=>"facebook_logo"),
        -#:host => "www.facebook.com/#{current_user.network.facebook}" if current_user.network.facebook
      -#= link_to image_tag("icon_twitter.png",:alt=>"twitter", :class=>"network_logos", :id=>"twitter_logo"),
        -#"www.twitter.com/#{current_user.network.twitter}" if current_user.network.twitter
      -#= link_to image_tag("icon_linkedin.png",:alt=>"linkedin", :class=>"network_logos", :id=>"linkedin_logo"),
        -#"www.linkedin.com/#{current_user.network.linkedin}" if current_user.network.linkedin
      
      -#= link_to_if(current_user.network.youtube, image_tag("icon_youtube.png",:alt=>"youtube", :class=>"network_logos", :id=>"youtube_logo"),
        -#{"#{current_user.network.youtube}", :host=>"www.youtube.com"})
    -#- else
    %a
      %img.network_logos#facebook_logo{:src => "/images/icon_facebook.png", :alt => "facebook link"}
    %a
      %img.network_logos#twitter_logo{:src => "/images/icon_twitter.png", :alt => "twitter link"}
    %a
      %img.network_logos#linkedin_logo{:src => "/images/icon_linkedin.png", :alt => "linkedIn link"}
    %a
      %img.network_logos#youtube_logo{:src => "/images/icon_youtube.png", :alt => "youtube link"}
    #nav_container
      %nav#round_special
        %ul
          %li 
            = link_to "Home", root_path
          - if signed_in?
            %li
              = link_to "Profile", profile_path(current_user)
            %li
              = link_to "All users", users_path
            %li
              = link_to "Settings", user_path(current_user)
            %li
              = link_to "Sign out", signout_path, :method => :delete
          - else
            %li
              = link_to "Contact", contact_path
            %li
              = link_to "About", about_path
            %li
              = link_to "Sign in", signin_path

