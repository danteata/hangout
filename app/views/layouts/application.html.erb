<!DOCTYPE html> 
<html>
  <head> 
    <title><%= title %></title> 
    <%= csrf_meta_tag %> <!--preventing cross site forgery--> 
    <!--[if lt IE 9]> <script src
      ="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]--> 
    <%= stylesheet_link_tag 'style',:media =>'screen' %> 
    <%= stylesheet_link_tag :all %> 
    <%= javascript_include_tag :defaults %> 
  </head>

  <body> <div class="round container"> <%= render 'layouts/nav' %>

      <section class="round">
        <% flash.each do |key, value| -%> <!--loop through and display right flash message--> 
          <div class="flash <%= key %>"><%= value %></div> 
        <% end -%>

        <%= yield %>
      </section>
      <%= debug(params) if Rails.env.development? %> <!--display the debug parameters in dev mode--> 
    </div>

  </body>
</html>
