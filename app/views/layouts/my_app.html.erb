<!DOCTYPE html> 
<html>
  <head> 
    <title><%= title %></title> 
    <%= csrf_meta_tag %> <!--preventing cross site forgery--> 
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]--> 
    <%= render "layouts/stylesheets" %>
    <%= javascript_include_tag :defaults %> 
  </head>

  <body>
    <div class="round container"> <%= render 'layouts/nav' %>
      <div id = "inner_content" class ="round">
      <section class="round">
        <% flash.each do |key, value| -%> <!--loop through and display right flash message--> 
          <div class="flash <%= key %>"><%= value %></div> 
        <% end -%>

        <%= yield %>
      </section>
    </div>
      <%= debug(params) if Rails.env.development? %> <!--display the debug parameters in dev mode--> 
    </div>
    <footer>
    copyright | <%= Time.now %>
    </footer>

  </body>
</html>
