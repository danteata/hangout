%h1 User Hub
#left_side
  %h1
    #gravatar
      = gravatar_for (@user)
      %br/
      = @user.name
    = @spec.full_name
    %br/
    =@spec.occupation
    %br/
    =@spec.birthday
  %hr/
  = link_to profile_url(@user), profile_path(@user)
  = friendship_status(current_user, @user) if current_user != @user
  %br/
  - unless Friendship.exists?(current_user, @user) or @user == current_user
    = link_to "Add #{current_user.name} as friend","www.google.com",
                    :confirm => "Add #{@user.name} as friend?"
  %hr/
  #bio
    %h2
      My Bio
    = sanitize @faq.bio
    - unless hide_edit_links?
      %span.edit_link
        = link_to "(edit)", edit_faq_path(@user)

#middle_side
  %fieldset
    %legend
      Basic User Info
    %table
      %tr
        %td.label
          Screen Name:
        %td
          = @user.name
      %tr
        %td.label
          Email:
        %td
          = @user.email
      %tr
        %td.label
          Password:
        %td
          ******
    - unless hide_edit_links?
      %span.edit_link
        = link_to "edit", edit_user_path(@user)

  %fieldset
    %legend
      User Spec
    %table
      -#= render 'specs/field_row', :collection => Spec::ALL_FIELDS
      - Spec::ALL_FIELDS.each do |field|
        = render 'specs/field_row', :field_row => field
    - unless hide_edit_links?
      %span.edit_link
        = link_to "edit", edit_spec_path(@user)
  - Faq::FAVOURITES.each do |favourite|
    = render 'faqs/sidebar_box', :sidebar_box => favourite

