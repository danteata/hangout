%fieldset
  %legend
    = @title

  = form_for (@message, :url=>{:controller=>"emails", :action=>"correspond",
    :id=>@recipient})  do |f|

    = render "shared/error_messages", :object => f.object

    = f.label :subject
    %br/
    - if @original_title and @original_body # if user is replying an original message 
      %p
        Original message was:
      %br/
      = @original_title
      %hr
      = @original_body
      %br/
    %br/
    =f.text_field :subject
    %br/
    = f.label :body
    %br/
    = f.text_area :body
    %br/
    = f.submit "Send message"

